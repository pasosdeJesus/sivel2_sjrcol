<div class="row">
  <div class="col-md-6">
    <%= victimasjr.association :maternidad,
      collection: Sivel2Gen::Maternidad.habilitados,
      include_blank: false,
      label: "Maternidad",
      label_method: :nombre, 
      value_method: :id %>	
  </div>
  <div class="col-md-6">
    <%= victimasjr.association :estadocivil,
      collection: Sivel2Gen::Estadocivil.habilitados,
      include_blank: false,
      label: "Estado Civil",
      label_method: :nombre, 
      value_method: :id %>
  </div>
  <div class="col-md-6">
    <%= victimasjr.association :rolfamilia,
      as: :hidden,
      collection: Sivel2Sjr::Rolfamilia.habilitados,
      include_blank: false,
      label: "Rol en Familia",
      label_method: :nombre, 
      value_method: :id,
      input_html: {
        "data-toggle" => 'tooltip',
        "title" => 'Solicite a la persona identificar su rol en la familia, con ello podremos analizar el tipo de ayuda que requiere'
      } %>
  </div>
</div>

