<h1> Actividad </h1>
<div class="row">
  <div class="col-md-6">
    <b>Id:</b> <%= @actividad.id %> <br>
    <b>Fecha de realización:</b> <%= @actividad.fecha %><br>

    <b>Oficina:</b> <%= @actividad.oficina.nombre if @actividad.oficina %> <br>
    <b>Departamento:</b> 
    <% if @actividad.presenta('departamento') != "" %>
      <%= @actividad.presenta('departamento') %>
    <% else %>
      No indica
    <% end %><br>
  </div>
  <div class="col-md-6">
    <b>Nombre:</b> <%= @actividad.nombre %><br>
    <b>Responsable:</b> <%= @actividad.responsable.nombre if @actividad.responsable%><br>
    <b>Caso asociado:</b> 
    <% if @actividad.casosjr.empty? %>
      Sin casos asociados
    <% else %>
      <%= @actividad.casosjr.pluck(:id_caso).join(", ") %>
    <% end %><br>
    <b>Municipio:</b> 
    <% if @actividad.presenta('municipio') != "" %>
      <%= @actividad.presenta('municipio') %>
    <% else %>
      No indica
    <% end %><br>
  </div>
</div>
<br>
<%= render 'show_listado_proyectos' %> 
<br>
<h3>Listado de Asistencia y Beneficiarios</h3>
<%= render 'show_listado_asistencia' %> 
<br>
<h3>Población</h3>
<%= render 'show_listado_poblacion' %> 
<div class="row">
  <div class="col-md-12">
    <b>Resultado:</b> <%= @actividad.resultado %> <br>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <b>Observaciones:</b> <%= @actividad.observaciones %><br>
  </div>
</div>
<br>
<h3>Anexos</h3>
<%= render 'show_listado_anexos' %> 
<br>
<%= render partial: 'show_acciones' %>
