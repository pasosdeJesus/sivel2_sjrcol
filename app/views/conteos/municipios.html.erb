<div class="page-header">
  <h1><%=t '.title', :default => "Municipios expulsores / receptores" %></h1>
</div>

<div sytle="text-align: right">
  <%= form_tag(conteos_municipios_path, method: "get") do %>
    Expulsi√≥n entre:
    <%= text_field_tag 'fechaini', @fechaini, maxlength: 10, size: 12, 
      "data-behaviour" => "datepicker" %> -
    <%= text_field_tag 'fechafin', @fechafin, maxlength: 10, size: 12, 
      "data-behaviour" => "datepicker" %>
    <%= submit_tag("Contar") %>
  <% end %>
</div>

<h2>Municipios Expulsores</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Sivel2Gen::Ubicacion.human_attribute_name(:id_pais) %></th>
      <th><%= Sivel2Gen::Ubicacion.human_attribute_name(:id_departamento) %></th>
      <th><%= Sivel2Gen::Ubicacion.human_attribute_name(:id_municipio) %></th>
      <th><%= "Desp. Individuales" %></th>
    </tr>
  </thead>
  <tbody>
    <% @expulsores.try(:each) do |cmun| %>
      <tr>
        <td><%= cmun['pais'] %></td>
        <td><%= cmun['departamento'] %></td>
        <td><%= cmun['municipio'] %></td>
        <td><%= cmun['cuenta'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>


