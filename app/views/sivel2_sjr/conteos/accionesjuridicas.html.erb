<div class="page-header">
  <h1><%=t '.title', :default => "Acción jurídicas interpuestas" %></h1>
</div>

<%= simple_form_for :filtro, 
  { remote: true, 
    url: File.join(Rails.configuration.relative_url_root, 
                   '/conteos/accionesjuridicas'),
    method: "get" } do |f| 
%>
  <div class="container">
    <div class="row filtro-fila">
      <div class="col-sm-4 col-md-3">
        Filtro:
      </div>
      <div class="col-sm-4 col-md-3">
        <%= f.input :fechaini,
          maxlength: 10, 
          size: 10,
          label: false,
          placeholder: 'Fec. Atención Inicial',
          input_html: {
            "data-behaviour" => "datepicker",
            "data-contarautomatico" => "" 
          }
        %>
      </div>
      <div class="col-sm-4 col-md-3">
        <%= f.input :fechafin,
          maxlength: 10, 
          size: 10,
          label: false,
          placeholder: 'Fec. Atención Final',
          input_html: {
            "data-behaviour" => "datepicker",
            "data-contarautomatico" => "" 
          }
        %>
      </div>
      <div class="col-sm-4 col-md-3">
        <%= f.input :oficina_id,
          collection: Sip::Oficina.habilitados,
          label_method: :nombre,
          value_method: :id,
          label: false,
          include_blank: '-- Oficina',
          input_html: { "data-contarautomatico" => "" }
        %>
      </div>
    </div>
    <div class="row filtro-fila">
      <div class="col-md-offset-5 col-md-2">
        <%= f.button :submit, 'Contar', class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>

<div id="resultado">
  <%= render 'resultado_accionesjuridicas' %>
</div> <!-- id: resultado -->
